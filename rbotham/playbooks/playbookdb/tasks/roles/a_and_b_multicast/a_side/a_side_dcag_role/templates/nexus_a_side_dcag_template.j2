      network {{a_exchange_loop_ipsub}}.{{a_exchange_loop_base+dev_id}}/32
    neighbor {{a_exchange_pxag_dcag_ipsub}}.{{ a_exchange_pxag_dcag_ip+2 }} remote-as {{pxag_asn}}
